@{
    ViewBag.Title = "Proyectos";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 40px;
        }

        .proyectos-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 40px;
        }

        .proyecto-item {
            width: 400px;
            height: 500px;
            text-align: center;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .proyecto-item img {
                width: 200px;
                height: 200px;
                object-fit: contain;
                object-position: center;
                border-radius: 10px;
                margin-bottom: 20px;
                transition: transform 0.5s;
            }

            .proyecto-item:hover img {
                transform: scale(2.2);
                opacity: 0.7;
            }

            .proyecto-item:not(:hover) img {
                transform: scale(1);
            }

            .proyecto-item h3 {
                margin-top: 10px;
                color: #555;
            }

            .proyecto-item p {
                margin-top: 10px;
                color: #777;
            }

        .button-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .buscar-button {
            display: inline-block;
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .buscar-button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <h2>Proyectos (4 en total)</h2>

    <div class="proyectos-container">
        <div class="proyecto-item">
            <img src="~/css/imagen/triangulo.jpg" />
            <div class="proyecto-info">
                <h3>Calculadora de área de triángulo</h3>
                <p>Mi segundo proyecto para aplicaciones móviles</p>
                <div class="button-container">
                <a href="https://github.com/ArturoZamoranoB/Triangulo.git" class="buscar-button">Buscar</a>
                </div>
            </div>
        </div>

        <div class="proyecto-item">
            <img src="~/css/imagen/calcular.jpg" />

            
            <div class="proyecto-info">
                <h3>Calculadora</h3>
                <p>Mi mejor aplicación móvil</p>
                <div class="button-container">
                <a href="https://github.com/ArturoZamoranoB/Calculadora_AZB1.git" class="buscar-button">Buscar</a>
                </div>
            </div>
        </div>

        <div class="proyecto-item">
            <img src="~/css/imagen/imc.png" />
            <div class="proyecto-info">
                <h3>Calculadora IMC</h3>
                <p>Mi primer Proyecto de móvil</p>
                <div class="button-container">
                <a href="https://github.com/ArturoZamoranoB/CalculadoraMC_AZB.git" class="buscar-button">Buscar</a>
                </div>
            </div>
        </div>

        <div class="proyecto-item">
            <img src="~/css/imagen/maps.png" />
            <div class="proyecto-info">
                <h3>Mapa para guardar Ubicaciones</h3>
                <p>Primera web con Xamarin.Forms</p>
                <div class="button-container">
                <a href="https://github.com/ArturoZamoranoB/CrudUbicacion_AZB.git" class="buscar-button">Buscar</a>
                </div>
            </div>
        </div>
    </div>
  
</body>
</html>


