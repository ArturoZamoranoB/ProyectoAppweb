@model ProyectoAppweb.Models.ContactoModel

@{
    ViewBag.Title = "Contacto";
}

<h2>Contacto</h2>

@using (Html.BeginForm("EnviarCorreo", "Contacto", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Asunto)
        @Html.TextBoxFor(model => model.Asunto, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Mensaje)
        @Html.TextAreaFor(model => model.Mensaje, new { @class = "form-control" })
    </div>

    <input type="submit" value="Enviar" class="btn btn-primary" />
}
